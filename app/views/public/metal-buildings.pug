extends _layouts/template

block head
  link(rel="stylesheet", href="/css/generic.css")

block content
  main.metal-container
    header.metal-header
      h1.metal-title Metal Buildings

    .metal-intro
      .metal-intro-grid
        .metal-intro-item
          span.metal-intro-highlight Durability
          | Built to last decades, resistant to rot, pests, and weather
        .metal-intro-item
          span.metal-intro-highlight Cost-Effective
          | Lower construction and insurance costs
        .metal-intro-item
          span.metal-intro-highlight Quick Install
          | Pre-engineered for faster construction
        .metal-intro-item
          span.metal-intro-highlight Versatile
          | Perfect for garages, workshops, storage
        .metal-intro-item
          span.metal-intro-highlight Customizable
          | Various sizes, colors, and configurations
        .metal-intro-item
          span.metal-intro-highlight Efficient
          | Well-insulated for temperature control

    .metal-grid
      -
        const imageData = [
          {
            file: 'achor-types.jpg',
            desc: 'Various anchor types used to secure metal buildings to different foundation surfaces'
          },
          {
            file: 'boxed-eave-regular-roof-close-up.jpg',
            desc: 'Detailed view of our boxed eave roof design showing superior water runoff capability'
          },
          {
            file: 'boxed-eave-roof.webp',
            desc: 'Complete boxed eave roof system providing excellent protection and clean aesthetics'
          },
          {
            file: 'carport-storage-combo.png',
            desc: 'Combination unit featuring both covered parking and enclosed storage space'
          },
          {
            file: 'colored-screws.jpeg',
            desc: 'Selection of color-matched fasteners ensuring seamless appearance'
          },
          {
            file: 'commercial-building.png',
            desc: 'Large-scale commercial metal building suitable for industrial applications'
          },
          {
            file: 'commerical-truss-system.webp',
            desc: 'Heavy-duty truss system designed for maximum structural integrity'
          },
          {
            file: 'farm-barn.png',
            desc: 'Agricultural storage building perfect for farm equipment and supplies'
          },
          {
            file: 'garage.png',
            desc: 'Enclosed metal garage providing secure vehicle storage and protection'
          },
          {
            file: 'loafing-shed.png',
            desc: 'Open-sided shelter ideal for livestock and equipment storage'
          },
          {
            file: 'metal-sheeting.jpeg',
            desc: 'High-quality metal panels available in various colors and profiles'
          },
          {
            file: 'metal-tubing.jpg',
            desc: 'Structural steel tubing used in our building frameworks'
          },
          {
            file: 'regular-roof.png',
            desc: 'Standard roof style offering reliable protection at an economical price'
          },
          {
            file: 'rv-cover.png',
            desc: 'Tall clearance cover designed specifically for RV protection'
          },
          {
            file: 'single-carport.png',
            desc: 'Basic single vehicle carport providing essential weather protection'
          },
          {
            file: 'single-roof-barn.png',
            desc: 'Traditional barn style building with modern metal construction'
          },
          {
            file: 'single-slope.png',
            desc: 'Single slope design perfect for lean-to applications'
          },
          {
            file: 'triple-wide-carport.png',
            desc: 'Extra wide carport accommodating multiple vehicles'
          },
          {
            file: 'vertical-roof-carport.jpeg',
            desc: 'Vertical roof style offering superior snow and rain runoff'
          },
          {
            file: 'vertical-roof-close-up.jpg',
            desc: 'Detailed view of vertical roof panel installation'
          }
        ]

        // Helper function to format the title
        const formatTitle = (filename) => {
          return filename
            .split('.')[0]
            .split('-')
            .join(' ')
            .replace(/\b\w/g, l => l.toUpperCase());
        }

      each item in imageData
        .metal-image-wrapper
          img.metal-image(
            src=`/assets/metal-buildings/${item.file}`,
            alt=formatTitle(item.file)
          )
          .metal-description-container
            .metal-description-title= formatTitle(item.file)
            .metal-description-text= item.desc
