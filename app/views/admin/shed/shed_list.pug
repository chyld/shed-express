extends ../_layouts/admin

block content
  .container.my-4
    h1.mb-4 Available Sheds

    .table-responsive
      table.table.table-hover
        thead
          tr
            th Type
            th Title
            th Size
            th Status
            th Base Price
            th Options
            th Sale
            th Final Price
            th Actions
        tbody
          each shed in sheds
            tr
              td= shed.shedType
              td= shed.title
              td #{ shed.sizeWidth }' Ã— #{ shed.sizeLength }'
              td
                span.badge(class=shed.isNew ? "bg-success" : "bg-secondary")= shed.isNew ? "New" : "Used"
              td $#{ shed.basePrice.toLocaleString() }
              td $#{ shed.optionsPrice.toLocaleString() }
              td
                if shed.salePercent > 0
                  span.text-danger -#{ shed.salePercent }%
                else
                  | -
              td.fw-bold
                if shed.salePercent > 0
                  | $#{ Math.round((shed.basePrice + shed.optionsPrice) * (1 - shed.salePercent/100)).toLocaleString() }
                else
                  | $#{ (shed.basePrice + shed.optionsPrice).toLocaleString() }
              td
                a.btn.btn-sm.btn-primary.me-2(href=`/admin/sheds/${shed.id}`) View Details
                a.btn.btn-sm.btn-secondary(href=`/admin/media/shed/${shed.id}`) Media
